<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/tv_share"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#131313"
        android:text="공유하기"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/maplestory_bold"
        android:text="생육 환경"
        android:id="@+id/tv_environment"
        android:textColor="@color/text"
        app:layout_constraintTop_toBottomOf="@id/tv_share"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/grid_environment"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_environment"
        android:useDefaultMargins="true"
        android:columnCount="2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:paddingVertical="24dp"
            android:background="#2F2F2F">
            <TextView
                android:id="@+id/tv_humidity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BCFF94"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="실내 습도"
                />

            <TextView
                android:id="@+id/tv_value_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:textColor="#BCFF94"
                app:layout_constraintTop_toBottomOf="@id/tv_humidity_title"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:paddingVertical="24dp"
            android:background="#2F2F2F">
            <TextView
                android:id="@+id/tv_lux_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#BCFF94"
                android:text="조도"
                />

            <TextView
                android:id="@+id/tv_value_lux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_lux_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:textColor="#BCFF94"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:paddingVertical="24dp"
            android:background="#2F2F2F">
            <TextView
                android:id="@+id/tv_soil_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BCFF94"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="토양 습도"
                />

            <TextView
                android:id="@+id/tv_value_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_soil_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:textColor="#BCFF94"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:paddingVertical="24dp"
            android:background="#2F2F2F">
            <TextView
                android:id="@+id/tv_temperature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BCFF94"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="실내 온도"
                />

            <TextView
                android:id="@+id/tv_value_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_temperature_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:textColor="#BCFF94"
                 />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </GridLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_api_response"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/grid_environment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        android:orientation="vertical"
        tools:listitem="@layout/list_row_plant"
        />
</androidx.constraintlayout.widget.ConstraintLayout>